@model BrainStew.Models.UserReports

@{
    ViewBag.Title = "PayoutWallet";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
